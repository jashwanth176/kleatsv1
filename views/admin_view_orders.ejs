    <script>
        let order_id = [];
        function checkingDispatch() {
            order_id = [];
            const checking = document.querySelectorAll(".dispatch");
            for (let index = 0; index < checking.length; index++) {
                if (checking[index].checked) {
                    order_id.push(checking[index].name);
                }
            }
        }

        async function dispatching() {
            try {
                const response = await fetch("/admin_view_dispatch_orders", {
                    method: "POST",
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ order_id_s: order_id })
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const result = await response.json();

                if (result.success) {
                    // Update the table with the new orders
                    updateOrdersTable(result.orders);
                } else {
                    console.error('Error dispatching orders:', result.error);
                    alert('An error occurred while dispatching orders. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        }

        function updateOrdersTable(orders) {
            const tbody = document.querySelector('#order tbody');
            tbody.innerHTML = '';

            if (orders.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8"><h1>No Orders Are Pending</h1></td></tr>';
            } else {
                orders.forEach((order, index) => {
                    const row = `
                        <tr>
                            <td>${index + 1}</td>
                            <td>${order.order_id}</td>
                            <td>${order.user_id}</td>
                            <td>${order.order_id.split('-')[1]}</td>
                            <td>${order.item_name}</td>
                            <td>${order.quantity}</td>
                            <td>${order.price}</td>
                            <td>${new Date(order.datetime).toLocaleString()}</td>
                            <td>${order.order_type === 'dinein' ? 'Dine In' : 'Pick Up' }</td>
                            <td>${order.order_type === 'pickup' ? '₹5.00' : '₹0.00' }</td>
                        </tr>
                    `;
                    tbody.innerHTML += row;
                });
            }
        }

        // Add this new script at the end of your existing scripts
        document.addEventListener('DOMContentLoaded', function() {
            const fixedButton = document.getElementById('fixedDispatchButton');
            
            function updateButtonVisibility() {
                if (window.innerHeight + window.scrollY >= document.body.offsetHeight - 100) {
                    fixedButton.style.bottom = '70px'; // Adjust if needed to avoid overlap with footer
                } else {
                    fixedButton.style.bottom = '20px';
                }
            }

            window.addEventListener('scroll', updateButtonVisibility);
            window.addEventListener('resize', updateButtonVisibility);
            
            // Initial call to set button position
            updateButtonVisibility();
        });

        document.addEventListener('DOMContentLoaded', function() {
            let eventSource;

            function connectSSE() {
                // Close existing connection if any
                if (eventSource) {
                    eventSource.close();
                }

                // Create new EventSource connection
                eventSource = new EventSource('/admin-orders-stream');

                eventSource.onmessage = function(event) {
                    try {
                        const data = JSON.parse(event.data);
                        updateOrdersTable(data.orders);
                        updateTotalMoney(data.totalMoney);
                    } catch (error) {
                        console.error('Error processing SSE message:', error);
                    }
                };

                eventSource.onerror = function(error) {
                    console.error('SSE Error:', error);
                    eventSource.close();
                    // Try to reconnect after 5 seconds
                    setTimeout(connectSSE, 5000);
                };
            }

            // Function to update the orders table
            function updateOrdersTable(orders) {
                const tbody = document.querySelector('#order tbody');
                if (!tbody) return;

                tbody.innerHTML = '';

                if (orders.length === 0) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="8" class="text-center">No dispatched orders found.</td>
                        </tr>
                    `;
                    return;
                }

                orders.forEach((order, index) => {
                    const row = `
                        <tr>
                            <td>${index + 1}</td>
                            <td>${order.order_id}</td>
                            <td>${order.user_id}</td>
                            <td>${order.order_id.split('-')[1]}</td>
                            <td>${order.item_name || 'N/A'}</td>
                            <td>${order.quantity}</td>
                            <td>${order.price}</td>
                            <td>${new Date(order.datetime).toLocaleString()}</td>
                            <td>${order.order_type === 'dinein' ? 'Dine In' : 'Pick Up' }</td>
                            <td>${order.order_type === 'pickup' ? '₹5.00' : '₹0.00' }</td>
                        </tr>
                    `;
                    tbody.innerHTML += row;
                });
            }

            // Function to update the total money display
            function updateTotalMoney(totalMoney) {
                const totalMoneyBox = document.querySelector('.total-money-box');
                if (totalMoneyBox) {
                    totalMoneyBox.innerHTML = `Total Money: ₹${totalMoney.toFixed(2)}`;
                }
            }

            // Start SSE connection
            connectSSE();

            // Clean up on page unload
            window.addEventListener('beforeunload', () => {
                if (eventSource) {
                    eventSource.close();
                }
            });
        });
    </script>
